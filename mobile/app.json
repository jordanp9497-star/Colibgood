{
  "expo": {
    "name": "Colib",
    "slug": "colib",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "colib",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.colib.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Autoriser Colib à accéder à la caméra pour ajouter une photo du colis.",
        "NSLocationWhenInUseUsageDescription": "Autoriser Colib à accéder à votre position pour suivre un trajet en cours."
      }
    },
    "android": {
      "permissions": ["CAMERA", "ACCESS_FINE_LOCATION"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.colib.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#7c3aed",
          "sounds": [],
          "androidMode": "default",
          "androidCollapsedTitle": "Colib"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsConfigPaths": true
    }
  }
}
